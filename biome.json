{
  "$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "recommended": false,
        "all": false
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noUnusedVariables": "warn",
        "noUnsafeOptionalChaining": "off"
      },
      "complexity": {
        "useOptionalChain": "off",
        "noUselessFragments": "warn",
        "noForEach": "off",
        "useSimpleNumberKeys": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noUnusedTemplateLiteral": "warn"
      },
      "performance": {
        "noDelete": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "trailingComma": "none",
      "semicolons": "asNeeded",
      "indentStyle": "space",
      "indentWidth": 2,
      "arrowParentheses": "asNeeded",
      "lineWidth": 120
    }
  }
}
